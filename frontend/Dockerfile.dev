# =============================================================================
# 前端开发环境 Dockerfile
# =============================================================================

FROM node:18-alpine

WORKDIR /app

# 配置npm使用淘宝镜像加速
RUN npm config set registry https://registry.npmmirror.com

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制应用代码
COPY . .

# 暴露端口
EXPOSE 5173

# 启动开发服务器
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
